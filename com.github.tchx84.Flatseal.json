{
    "app-id": "com.github.tchx84.Flatseal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "separate-locales": false,
    "command": "com.github.tchx84.Flatseal",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/overrides:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://source.puri.sm/Librem5/libhandy/-/archive/v0.0.13/libhandy-v0.0.13.tar.gz",
                    "sha256": "138bec94e66d15a7a19350b65845d4529bcd969ea913ab3eb438f56fe47d5d37"
                }
            ]
        },
        {
            "name": "flatseal",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tchx84/Flatseal.git",
                    "tag": "v1.4.0",
                    "commit": "910d6f999c57f33ae203181e0f5dab93dde86b70"
                }
            ]
        }
    ]
}
