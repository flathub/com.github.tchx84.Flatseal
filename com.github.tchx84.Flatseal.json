{
    "app-id": "com.github.tchx84.Flatseal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.tchx84.Flatseal",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/overrides"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "flatseal",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tchx84/Flatseal.git",
                    "tag": "v1.2.2",
                    "commit": "82f5d21d52efc04431b4b9ee4794c42e653185eb"
                }
            ]
        }
    ]
}
