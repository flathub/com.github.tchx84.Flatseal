{
    "app-id": "com.github.tchx84.Flatseal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "separate-locales": false,
    "command": "com.github.tchx84.Flatseal",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=xdg-data/flatpak/app:ro",
        "--filesystem=xdg-data/flatpak/overrides:create",
        "--talk-name=org.gnome.Software",
        "--talk-name=org.freedesktop.impl.portal.PermissionStore"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libhandy/1.2/libhandy-1.2.2.tar.xz",
                    "sha256": "47ffd2865d02bd1ca579522deadd7e2f95362f1f202462fd5eeae2b81668b048",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libhandy",
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "appstream-glib",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddep11=false",
                "-Dbuilder=false",
                "-Drpm=false",
                "-Dalpm=false",
                "-Dfonts=false",
                "-Dstemmer=false",
                "-Dman=false",
                "-Dstemmer=false",
                "-Dgtk-doc=false",
                "-Dintrospection=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hughsie/appstream-glib",
                    "tag": "appstream_glib_0_7_18",
                    "commit": "705e8e2061e9c9ef741792b1de56c6529fb57082",   
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^appstream_glib_([\\d_]+)$"
                    }                    
                }
            ]
        },
        {
            "name": "flatseal",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tchx84/Flatseal.git",
                    "tag": "v1.7.1",
                    "commit": "16f89f07886a51b46dd0dc3fb586036c6a5c41ff",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    } 
                }
            ]
        }
    ]
}
